<div id="modal-form" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><i class="fa fa-times"></i></button>
                <h4 class="modal-title">Page Meta</h4>
            </div>
            <div class="modal-body">
                <div class="form-horizontal clearfix">
                    <div class="form-group">
                        <label class="control-label col-sm-4" for="txtSlug">Slug</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="txtSlug" data-ng-model="page.Slug" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-4" for="selParents">{{lbl.parent}}</label>
                        <div class="col-sm-8">
                            <select id="selParents" class="form-control" data-ng-options="o.OptionName for o in lookups.PageList" data-ng-model="selectedParent"></select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-4" for="txtDate">Date published</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="txtDate" data-ng-model="page.DateCreated" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-4" for="txtExcerpt">Description</label>
                        <div class="col-sm-8">
                            <textarea class="form-control" rows="2" id="txtExcerpt" data-ng-model="page.Description"> </textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-4" for="txtKeywords">Keywords</label>
                        <div class="col-sm-8">
                            <textarea class="form-control" rows="2" id="txtKeywords" data-ng-model="page.Keywords"> </textarea>
                        </div>
                    </div>
                    <div class="col-sm-offset-4 col-sm-8">
                        <div class="form-group">
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" data-ng-model="page.IsFrontPage" name="cbFrontPage" />
                                    <span>Is front page</span>
                                </label>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" data-ng-model="page.ShowInList" name="cbShowInList" />
                                    <span>Show in list</span>
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">{{lbl.close}}</button>
                <button data-ng-click="save()" class="btn btn-primary pull-right">{{lbl.save}}</button>
            </div>
        </div>
    </div>
</div>
