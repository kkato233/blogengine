<?xml version="1.0"?>
<configuration>
  
	<configSections>
		<sectionGroup name="BlogEngine">
			<section name="blogProvider" type="DotNetSlave.BlogEngine.BusinessLogic.BlogProviderSection, DotNetSlave.BlogEngine.BusinessLogic" allowDefinition="MachineToApplication" restartOnExternalChanges="true"/>
		</sectionGroup>
	</configSections>
	
  <BlogEngine>
		<blogProvider defaultProvider="XmlBlogProvider">
			<providers>
				<add name="XmlBlogProvider" type="DotNetSlave.BlogEngine.BusinessLogic.XmlBlogProvider"/>
			</providers>
		</blogProvider>
	</BlogEngine>
	
  <appSettings>
		<add key="SettingsFile" value="~/app_data/settings.xml"/>
	</appSettings>
	
  <system.web>
		<compilation debug="false" batch="true" />
    <customErrors mode="Off" />
		<globalization requestEncoding="utf-8" responseEncoding="utf-8" culture="auto" uiCulture="auto"/>
		<xhtmlConformance mode="Strict"/>
		<trust level="High"/>

    <authentication mode="Forms">
			<forms timeout="129600" name=".AUXBLOGENGINE" protection="All" slidingExpiration="true"/>
		</authentication>

    <pages buffer="true" enableSessionState="false">
			<controls>
				<add namespace="Controls" tagPrefix="blog"/>
			</controls>
		</pages>
	
    <membership defaultProvider="XmlMembershipProvider">
			<providers>
				<add name="XmlMembershipProvider" type="DotNetSlave.BlogEngine.BusinessLogic.XmlMembershipProvider" description="XML membership provider" xmlFileName="~/App_Data/users.xml"/>
			</providers>
		</membership>

    <httpModules>
			<add name="UrlRewrite" type="UrlRewrite"/>
			<add name="CompressionModule" type="CompressionModule"/>
			<add name="ReferrerModule" type="ReferrerModule"/>
		</httpModules>

    <httpHandlers>
			<add verb="*" path="microsummary.axd" type="MicroSummary" validate="false"/>
			<add verb="*" path="file.axd" type="FileHandler" validate="false"/>
			<add verb="*" path="image.axd" type="ImageHandler" validate="false"/>
			<add verb="*" path="rss.axd" type="RssHandler" validate="false"/>
			<add verb="*" path="sitemap.axd" type="Sitemap" validate="false"/>
			<add verb="*" path="trackback.axd" type="TrackbackHandler" validate="false"/>
			<add verb="*" path="pingback.axd" type="PingbackHandler" validate="false"/>
			<add verb="*" path="opensearch.axd" type="OpenSearchHandler" validate="false"/>
		</httpHandlers>

  </system.web>
</configuration>
